---
import './src/styles/global.css'

import Header from '@/components/header/Header.astro'
import Footer from '@/components/footer/Footer.astro'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Cine Info</title>
    <link rel="icon" type="image/svg+xml" href="/cine_logo.svg" />

    <meta
      name="description"
      content="Descubre las mejores películas y series del cine histórico y actual. Reseñas y valoraciones honestas para ayudarte a elegir tus próximas películas y series favoritas"
    />

    <meta property="og:title" content="Cine Info" />
    <meta
      property="og:description"
      content="Descubre las mejores películas y series del cine histórico y actual."
    />
    <!--<meta property="og:image" content=""> -->
  </head>
  <body class="bg-dark">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
