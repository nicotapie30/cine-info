---
import SocialNetwork from '../SocialNetwork.astro'
import Instagram from '@/assets/svg/Instagram.svg'
import Linkedin from '@/assets/svg/Linkedin.svg'
import Github from '@/assets/svg/Github.svg'
---

<footer class="bg-dark-accent/50 w-full">
  <div class="mx-auto w-full max-w-screen-xl p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="mb-4 flex items-center space-x-3 sm:mb-0 rtl:space-x-reverse">
        <img src="/images/cine_logo-big.webp" class="h-18" alt="Cine Info logo" />
      </div>
      <ul
        class="mb-6 flex flex-wrap items-center text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400"
      >
        <li>
          <a href="/About" class="underline-from-left relative me-4 md:me-6">About</a>
        </li>
        <li>
          <a href="/PrivacyPolicy" class="underline-from-left relative me-4 md:me-6"
            >Privacy Policy</a
          >
        </li>
      </ul>
    </div>
    <hr class="relative my-6 border-gray-200 sm:mx-auto lg:my-8 dark:border-gray-700" />
    <div class="flex items-center justify-between">
      <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400"
        >© 2025 <a
          href="https://www.linkedin.com/in/nicolasatapiedev30"
          target="_blank"
          class="underline-from-left relative">Nicolás Alejandro Tapié</a
        >. Todos los derechos reservados.</span
      >
      <div class="flex items-center gap-4">
        <SocialNetwork
          href="https://www.instagram.com/nicotapie1/"
          target="_blank"
          aria-label="Instagram de Nicolás Tapié"
        >
          <Instagram class="text-[#6a7282] transition-all duration-200 hover:text-white" />
        </SocialNetwork>
        <SocialNetwork
          href="https://www.linkedin.com/in/nicolasatapiedev30/"
          target="_blank"
          aria-label="Linkedin de Nicolás Tapié"
        >
          <Linkedin class="text-[#6a7282] transition-all duration-200 hover:text-white" />
        </SocialNetwork>
        <SocialNetwork
          href="https://github.com/nicotapie30"
          target="_blank"
          aria-label="Github de Nicolás Tapié"
        >
          <Github class="text-[#6a7282] transition-all duration-200 hover:text-white" />
        </SocialNetwork>
      </div>
    </div>
  </div>
</footer>

<style>
  .underline-from-left::after {
    content: '';
    position: absolute;
    width: 0%;
    height: 0.5px;
    bottom: 0;
    left: 0;
    background-color: #fff;
    transition: all 0.2s ease-in-out;
  }

  .underline-from-left:hover::after {
    width: 100%;
  }
</style>
