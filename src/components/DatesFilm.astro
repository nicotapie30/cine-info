---
const { movie, genres } = Astro.props
---

<section class="animate-fade-in flex w-[40%] flex-col justify-between">
  <div class="bottom-2 left-1 lg:bottom-24 lg:left-8">
    <span
      transition:name="movie-name"
      class="text-shadow mb-6 block text-2xl text-pretty text-white underline lg:text-4xl lg:font-bold"
    >
      {movie.title}
    </span>
    <p
      class="text-shadow prose mb-1 block text-justify text-base text-pretty text-white lg:text-base lg:font-medium"
    >
      {movie.overview}
    </p>
  </div>
  <div class="flex flex-col gap-6">
    <span class="font-bold text-zinc-200">
      Puntuación: {Math.round(movie.vote_average)}
    </span>

    <span class="font-bold text-zinc-200">
      Opiniones: {movie.vote_count}
    </span>

    <span class="font-bold text-zinc-200">
      Fecha: {movie.release_date}
    </span>

    <span class="font-bold text-zinc-200">
      Popularidad: {movie.popularity}
    </span>

    <span class="font-bold text-zinc-200">
      Género: {genres}
    </span>
  </div>
</section>
